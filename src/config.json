{
  "github": {
    "user": "nchungdev",
    "repo": "pogo-scrapers"
  },

  "scraper_settings": {
    "retries": 3,
    "delay": 5,
    "timeout": 15,
    "cache_expiration_hours": 1
  },

  "scrapers": {
    "TypeScraper": {
      "url": "https://db.pokemongohub.net/tools/type-chart",
      "file_name": "type_chart",
      "enabled": true,
      "pipeline": "monthly"
    },
    "RaidNowScraper": {
      "url": "https://raidnow.leekduck.com",
      "file_name": "raid_now",
      "enabled": true,
      "pipeline": "hourly"
    },
    "RaidBossScraper": {
      "url": "https://leekduck.com/boss/",
      "file_name": "raid_bosses",
      "enabled": true,
      "pipeline": "daily"
    },
    "ResearchScraper": {
      "url": "https://leekduck.com/research/",
      "file_name": "research_tasks",
      "enabled": true,
      "pipeline": "daily"
    },
    "RocketLineupScraper": {
      "url": "https://leekduck.com/rocket-lineups/",
      "file_name": "rocket_lineups",
      "enabled": true,
      "pipeline": "daily"
    },
    "EggScraper": {
      "url": "https://leekduck.com/eggs/",
      "file_name": "egg_pool",
      "enabled": true,
      "pipeline": "hourly"
    },
    "EventScraper": {
      "url": "https://leekduck.com/events/",
      "file_name": "events",
      "enabled": true,
      "pipeline": "weekly"
    },
    "PokemonListScraper": {
      "url": "https://pokeapi.co/api/v2/pokemon-species?limit=100000",
      "file_name": "pokemon_list",
      "enabled": true,
      "pipeline": "monthly"
    }
  }
}